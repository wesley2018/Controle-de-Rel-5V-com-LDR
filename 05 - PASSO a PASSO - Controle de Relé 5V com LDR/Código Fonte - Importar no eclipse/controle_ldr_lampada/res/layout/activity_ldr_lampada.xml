<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="#FFFFFF" 
	tools:context="com.example.controle_ldr_lampada.Ldr_lampada_Activity">
	
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:src="@drawable/logo" />
    
    <LinearLayout 
        		android:id="@+id/linearLayoutLampada" 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:paddingTop="50px"
				android:background="#FFFFFF">
	<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="20sp"
			android:textColor="#00BFFF"
			android:textStyle="bold"
			android:text="LÂMPADA" />
		</LinearLayout>
		
        <TextView
    		    android:layout_width="wrap_content" 
    		    android:layout_height="wrap_content"/>
        <TextView
    		    android:layout_width="wrap_content" 
    		    android:layout_height="wrap_content"/>
	
    <LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	<ImageButton
        android:id="@+id/btLampada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/on" />
	
		</LinearLayout>

	<LinearLayout 
        		android:id="@+id/linearLayoutStatus" 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:paddingTop="50px"
				android:background="#FFFFFF">
	<TextView 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textSize="40sp"
			android:textColor="#00BFFF"
			android:textStyle="bold"
			android:text="STATUS" />
		</LinearLayout>
		<TextView
    		    android:layout_width="wrap_content" 
    		    android:layout_height="wrap_content"/>
		
	<LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">

	<TextView
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="10px"
	    android:text="LÂMPADA:"
	    android:textColor="#00BFFF"
	    android:textSize="20sp"
	    android:textStyle="bold" />

	<TextView
	    android:id="@+id/tvStatusLampada"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="41px"
	    android:text="on..."
	    android:textColor="#00BFFF"
    	android:textSize="20sp"
	    android:textStyle="bold" >
</TextView>
		</LinearLayout>

        
        <LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	<TextView 
			android:paddingRight="10px" 
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textColor="#00BFFF"
    		android:textSize="20sp"
			android:textStyle="bold"
			android:text="LDR:" />

	<TextView
	    android:id="@+id/tvStatusLDR"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingRight="41px"
	    android:text="on..."
	    android:textColor="#00BFFF"
    	android:textSize="20sp"
	    android:textStyle="bold" >
</TextView>

		</LinearLayout>

		<TextView
    		    android:layout_width="wrap_content" 
    		    android:layout_height="wrap_content"/>
        <TextView
    		    android:layout_width="wrap_content" 
    		    android:layout_height="wrap_content"/>
		
    <LinearLayout 
        		android:orientation="horizontal" 
    		    android:layout_width="fill_parent"
				android:layout_height="wrap_content" 
				android:gravity="center_horizontal"
				android:background="#FFFFFF">
	
        <CheckBox
                android:id="@+id/ck_ldr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Desabilitar o sensor LDR" 
                android:paddingRight="70px"/>
        
	<ImageButton
        android:id="@+id/bt_Enviar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/enviar" />
	
		</LinearLayout>	
</LinearLayout>